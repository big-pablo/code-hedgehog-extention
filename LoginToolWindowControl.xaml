<UserControl x:Class="code_hedgehog_extention_mine.LoginToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="WhiteSmoke"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="E-mail" FontSize="15"/>
        <TextBox Name="EmailTextBox" TextWrapping="Wrap" Height="25" Width="170"/>
        <Label Content="Пароль" FontSize="15"/>
        <PasswordBox Name="PasswordBox" Height="25" Width="170"/>
        <Button Content="Войти" FontSize="15" Width="170" Margin="0, 15, 0, 0" Click="Button_Click"/>
    </StackPanel>
</UserControl>
