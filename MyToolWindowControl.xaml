<UserControl x:Class="code_hedgehog_extention_mine.MyToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="WhiteSmoke"
             mc:Ignorable="d"
             d:DesignHeight="350.847" d:DesignWidth="461.865"
             Name="MyToolWindow"
             Loaded="UserControl_LoadedAsync">
    <StackPanel Orientation="Vertical">
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Name="TaskMenuItem" Header="Задача">
            </MenuItem>
            <MenuItem Name="LangMenuItem" Header="Язык" ></MenuItem>
        </Menu>
        <Label Margin="10" Name="TaskHeader" FontWeight="Bold" Content="Выберите задачу" FontSize="20" HorizontalAlignment="Center"/>
        <TextBlock Name="TaskDescription" HorizontalAlignment="Stretch" TextWrapping="Wrap" FontSize="12" Height="200" Text=""/>
        
    </StackPanel>
</UserControl>
